<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Excel Data Analyzer</title>
    <style>
        body {
            font-family: Arial;
            padding: 20px;
        }
        
        table {
            border-collapse: collapse;
            margin-top: 20px;
            width: 100%;
        }
        
        th,
        td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }
        
        th {
            background: #f0f0f0;
        }
        
        label {
            display: block;
            margin-top: 10px;
            margin-bottom: 5px;
        }
        
        textarea {
            width: 300px;
            height: 80px;
            resize: vertical;
        }
    </style>
</head>

<body>
    <h2>Upload Excel File (.xlsx)</h2>
    <form action="/upload" method="POST" enctype="multipart/form-data">
        <input type="file" name="excelFile" accept=".xlsx" required />
        <button type="submit">Upload & View</button>
    </form>

    <% if (headers && rows) { %>
        <h3>Filter Results</h3>
        <form method="GET" action="/view">
            <label for="finalStatusSelect">Final Status:</label>
            <select name="Final_Status" id="finalStatusSelect">
            <option value="All">All</option>
            <% filters.finalStatusList.forEach(val => { %>
            <option value="<%= val %>" <%= selectedFilters.Final_Status === val ? 'selected' : '' %>>
                <%= val %>
            </option>
            <% }) %>
        </select>

            <label for="countrySelect">Country:</label>
            <select name="Country" id="countrySelect">
            <option value="All">All</option>
            <% filters.countryList.forEach(val => { %>
            <option value="<%= val %>" <%= selectedFilters.Country === val ? 'selected' : '' %>>
                <%= val %>
            </option>
            <% }) %>
        </select>

            <label for="qaStatusSelect">QA Status:</label>
            <select name="QA_Status" id="qaStatusSelect">
            <option value="All">All</option>
            <% filters.qaStatusList.forEach(val => { %>
            <option value="<%= val %>" <%= selectedFilters.QA_Status === val ? 'selected' : '' %>>
                <%= val %>
            </option>
            <% }) %>
        </select>

            <label for="jobTitlesTextarea">Job Titles (paste multiple, separated by commas or new lines):</label>
            <textarea name="Job_Titles" id="jobTitlesTextarea" placeholder="e.g. marketing, software engineer, project manager"><%= selectedFilters.Job_Titles ? selectedFilters.Job_Titles.replace(/\n/g, ', ') : '' %></textarea>

            <br />
            <button type="submit">Apply Filters</button>
        </form>

        <h3>Parsed Excel Data</h3>
        <table>
            <thead>
                <tr>
                    <% headers.forEach(header => { %>
                        <th>
                            <%= header %>
                        </th>
                        <% }) %>
                </tr>
            </thead>
            <tbody>
                <% rows.forEach(row => { %>
                    <tr>
                        <% headers.forEach(header => { %>
                            <td>
                                <%- row[header] %>
                            </td>
                            <% }) %>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <% } %>

            <script>
                // When user pastes into textarea, convert newlines to commas automatically
                const jobTitlesTextarea = document.getElementById('jobTitlesTextarea');
                jobTitlesTextarea.addEventListener('paste', function(e) {
                    e.preventDefault();
                    const text = (e.clipboardData || window.clipboardData).getData('text');
                    // Replace new lines with commas + space
                    const formattedText = text.replace(/\r?\n/g, ', ');
                    // Insert at cursor position
                    const start = this.selectionStart;
                    const end = this.selectionEnd;
                    const value = this.value;
                    this.value = value.substring(0, start) + formattedText + value.substring(end);
                    // Set cursor after inserted text
                    this.selectionStart = this.selectionEnd = start + formattedText.length;
                });
            </script>
</body>

</html>